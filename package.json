{
  "name": "klang-app",
  "version": "1.0.2",
  "description": "Klang - Early Access (Local Port Edition)",
  "author": "PuchitoGameDev",
  "main": "main.js",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/PuchitoGameDev/KLANG"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && node fix-paths.js",
    "preview": "vite preview",
    "electron": "electron .",
    "dist": "npm run build && electron-builder --win --x64",
    "dist:clean": "rd /s /q dist release && npm run build && electron-builder --win --x64",
    "publish": "npm run build && electron-builder --win --x64 --publish always"
  },
  "dependencies": {
    "custom-electron-titlebar": "^4.2.8",
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.7.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.6.0",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.klang.app",
    "productName": "Klang Early Access",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "PuchitoGameDev",
        "repo": "https://github.com/PuchitoGameDev/KLANG"
      }
    ],
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker",
      "icon": "public/icon.ico",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "Klang_Alpha_Test_${version}.${ext}"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}